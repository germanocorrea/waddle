<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Waddle</title>
        <link rel="stylesheet" href="css/foundation.min.css">
        <link rel="stylesheet" href="css/app.css">
        <script src="js/vue.js" charset="utf-8"></script>
    </head>
    <body>
        <header class="top-bar">
            <div class="top-bar-left">
                <ul class="menu">
                    <li class="menu-text">Waddle</li>
                </ul>
            </div>
            <div class="top-bar-right">
                <button type="button" name="button" onclick="syncfromserver(event)" class="button alert">Sincronizar Emails</button>
            </div>
        </header>
        <div id="maindrag" class="board-conta container">
                <div
                class="board-column dropzone"
                v-on:dragenter="dragEnter"
                v-on:dragleave="dragLeave"
                v-on:dragover="dragOver"
                v-on:drop="dropElement"
                v-for="(column, index) in columns"
                v-bind:id="index">
                    <h3>{{ column.title }}</h3>
                    <ul v-bind:id="index">
                        <li class="draghere card" v-bind:id="index">
                            Aqui!
                        </li>
                        <li
                        class="card draggable"
                        v-on:dragstart="dragStart"
                        v-on:dragend="dragEnd"
                        v-on:click="openMail"
                        v-for="(card, index) in column.cards"
                        v-bind:id="index"
                        v-bind:key="index"
                        v-bind:draggable="true"
                        v-if="card"
                        >
                            <div class="card-title">{{ card.subject }}</div>
                            <small>{{ card.from }}</small>
                        </li>
                    </ul>
                </div>
        </div>
        <script src="js/jquery.js" charset="utf-8"></script>
        <script src="js/what-input.js" charset="utf-8"></script>
        <script src="js/foundation.js" charset="utf-8"></script>
        <script src="js/sweetalert2.all.min.js" charset="utf-8"></script>
        <script src="js/app.js" charset="utf-8"></script>
    </body>
</html>
